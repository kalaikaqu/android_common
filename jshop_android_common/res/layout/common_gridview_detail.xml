<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="238dp"
    android:layout_height="178dp"
    android:padding="1dp"
    android:background="@drawable/common_gridview_box">
    
    <ImageView
        android:id="@+id/gridview_coffeeimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
       	android:src="@drawable/goodsdemo">
        
    </ImageView>    
    
    <TextView 
        android:id="@+id/gridview_coffeename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="咖啡饮品一"
        android:textSize="24dp"        
        android:textColor="#88ffffff"/>
    
    <TextView
        android:id="@+id/gridview_plus"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/ovalforgrid"
        android:text="+"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="28dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"></TextView>
    
     <TextView
         android:id="@+id/crapongrid"
         android:layout_width="match_parent"
         android:layout_height="36dp"
         android:background="#88000000"
         android:text="优惠中,买三送一..."
         android:textSize="18dp"
         android:gravity="center_vertical"
         android:layout_alignParentBottom="true"
         ></TextView>	
    
</RelativeLayout>